# MongoDB connection string (Use MongoDB Atlas for production)
# Get free cluster at: https://www.mongodb.com/atlas
MONGODB_URI=mongodb://localhost:27017/adult_video_db

# JWT secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Cloudflare R2 (S3 compatible storage)
# Get credentials from: https://dash.cloudflare.com/
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY=your_r2_access_key
R2_SECRET_KEY=your_r2_secret_key
R2_BUCKET=your_bucket_name
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Admin user (automatically created on server start)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Server port (Render will set this automatically)
PORT=4000
